<!-- Add a <h1> block if page has a title -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
<% messages() %>

<div>
    <form method="POST" action="/account/login">
        <fieldset>
            <label>Email</label><br>
            <input type="email" name="account_email" id="accountEmail" required value="<%= locals.account_email %>"><br>
            <label>Password</label><br>
            <input type="password" name="account_password" id="accountPassword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
            <span class="password-requirements">Passwords must be at least 12 characters and contain at least 1 uppercase character, 1 number and 1 special character</span><br>
            <button type="submit">Login</button>
            <p>No account? <a href="/account/register">Sign-up</a></p>
        </fieldset>
    </form>
</div>

