<!-- Add a <h1> block if page has a title -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% messages() %>

<div>
    <p>All fields are required.</p>
    <form method="post" action="/account/register">
        <fieldset>
            <label>First Name</label><br>
            <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>"><br>
            <label>Last Name</label><br>
            <input type="text" name="account_lastname" id="accountLastname" required value="<%= locals.account_lastname %>"><br>
            <label>Email</label><br>
            <input type="email" name="account_email" id="accountEmail" required value="<%= locals.account_email %>"><br>
            <label>Password</label><br>
            <input type="password" name="account_password" id="accountPassword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
            <span class="password-requirements">Passwords must be at least 12 characters and contain at least 1 uppercase character, 1 number and 1 special character</span><br>
            <button type="submit">Register</button>
        </fieldset>
    </form>
</div>