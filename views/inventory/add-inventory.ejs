<!-- Add a <h1> block if page has a title -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% messages() %>

<form method="POST" action="/inv/add-inventory" enctype="multipart/form-data">
    <fieldset>
        <label><h2>Classification</h2></label><br>
        <select name="classification_id" id="classificationId" required>
            <option value="" disabled selected>Select a Classification</option>
            <%# classificationList.forEach(classification => { %>
                <!-- <option value="<%#= classification.classification_id %>" <%# (locals.classification_id == classification.classification_id) ? 'selected' : '' %>><%# classification.classification_name %></option> -->
            <%# }) %>
        </select><br><br>

        <label><h2>Make</h2></label><br>
        <input type="text" name="inv_make" id="invMake" placeholder="Min of 3 characters" required pattern=".{3,}$" value="<%= locals.inv_make %>"><br><br>

        <label><h2>Model</h2></label><br>
        <input type="text" name="inv_model" id="invModel" placeholder="Min of 3 characters" required pattern=".{3,}$" value="<%= locals.inv_model %>"><br><br>

        <label><h2>Year</h2></label><br>
        <input type="number" name="inv_year" id="invYear" placeholder="4-digit year" required pattern=".{4,4}$" value="<%= locals.inv_year %>"><br><br>

        <label><h2>Description</h2></label><br>
        <textarea name="inv_description" id="invDescription" required><%= locals.inv_description %></textarea><br><br>

        <label><h2>Price</h2></label><br>
        <input type="number" name="inv_price" id="invPrice" placeholder="decimal or integer" required min="0.01" step="0.01" value="<%= locals.inv_price %>"><br><br>

        <label><h2>Miles</h2></label><br>
        <input type="number" name="inv_miles" id="invMiles" placeholder="digits only" required min="0" step="0.1" value="<%= locals.inv_miles %>"><br><br>

        <label><h2>Color</h2></label><br>
        <input type="text" name="inv_color" id="invColor" required pattern=".{1,}$" value="<%= locals.inv_color %>"><br><br>

        <label><h2>Image</h2></label><br>
        <input type="text" name="inv_image" id="invImage" accept="/images/vehicles/no-image.png"><br><br>

        <label><h2>Thumbnail</h2></label><br>
        <input type="text" name="inv_thumbnail" id="invThumbnail" accept="/images/vehicles/no-image-tn.png"><br><br>

        <button type="submit">Add Vehicle</button>
    </fieldset>