<!-- Add a <h1> block if page has a title -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% messages() %>

<h3>The Own Me Page</h3>

<form method="POST" action="ownMe/ownMe">
    <fieldset>
        <label><h2>Enter your information to own your vehicle today!</h2></label><br><br>

        <label>First Name</label><br>
        <input type="text" name="first_name" id="firstName" required pattern=".{1,}$" value="<%= locals.first_name %>"><br><br>

        <label>Last Name</label><br>
        <input type="text" name="last_name" id="lastName" required pattern=".{2,}$" value="<%= locals.last_name %>"><br><br>

        <label>Email</label><br>
        <input type="email" name="email" id="email" required placeholder="my@email.com" value="<%= locals.email %>"><br><br>

        <label>Phone Number</label><br>
        <input type="tel" name="phone_number" id="phoneNumber" required placeholder="123-456-7890" pattern="^\(?([0-9]{3})\)?[-.●]?([0-9]{3})[-.●]?([0-9]{4})$" value="<%= locals.phone_number %>"><br><br>

        <label>Address</label><br>
        <input type="text" name="address" id="address" required value="<%= locals.address %>"><br><br>

        <label>City</label><br>
        <input type="text" name="city" id="city" required value="<%= locals.city %>"><br><br>

        <label>State</label><br>
        <input type="text" name="state" id="state" required value="<%= locals.state %>"><br><br>

        <label>Zip Code</label><br>
        <input type="text" name="zip_code" id="zipCode" required placeholder="12345 OR 12345-6789" pattern="^\d{5}(-\d{4})?$" value="<%= locals.zip_code %>"><br><br>

        <button>Submit</button>
    </fieldset>
</form>